<%= form_for @meal_plan, html: { class: 'form meal-plan-form' } do |f| %>
  <%= f.label :start_date %>
  <%= f.date_field :start_date, class: 'date-field', required: true %>
  <%= f.label :end_date %>
  <%= f.date_field :end_date, class: 'date-field', required: true %>

  <%= f.collection_check_boxes :recipe_ids, Recipe.all, :id, :title do |b| %> 
    <%= b.check_box class: 'check-box' %>
    <%= b.label class: 'check-box' %>
    <br />
  <% end %> 
  
  <%= f.submit 'Save meal plan', class: 'button success-button' %>
<% end %>
