<%= form_for @ingredient, html: { class: 'ingredient-form' } do |f| %>
  <%= f.label :name, class: 'sr-only' %>
  <%= f.text_field :name, required: true %>
  <%= f.submit 'Add ingredient', class: 'add-button' %>
<% end %>


<% @ingredients.each do |recipe| %>
  <p><%= recipe.name %>
  <%= link_to 'Destroy', recipe, method: :delete, 
  data: { confirm: 'Are you sure?' } %>
<% end %>
