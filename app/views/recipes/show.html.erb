<h1><%= @recipe.title %></h1>

<% if @recipe.image.attached? %>
  <image src="<%= (url_for(@recipe.image)) %>" 
    alt="<%= @recipe.title %>">
<% end %>

<p><%= @recipe.instructions %></p>

<%= link_to 'Destroy', @recipe, method: :delete, 
  data: { confirm: 'Are you sure?' } %>
<%= link_to 'Edit', edit_recipe_path(@recipe) %>
